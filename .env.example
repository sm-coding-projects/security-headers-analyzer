# Security Headers Analyzer Environment Variables
# Copy this file to .env.local and fill in the values

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# GitHub Integration (Optional)
# Required for creating pull requests with security header fixes
# Generate a personal access token at: https://github.com/settings/tokens
# Required scopes: repo, read:user
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY=

# Rate Limiting & Caching (Optional)
# Redis URL for distributed rate limiting and caching
# If not provided, in-memory storage will be used
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# Database (Optional)
# PostgreSQL connection for storing analysis history
# If not provided, analysis results won't be persisted
DATABASE_URL=postgresql://username:password@localhost:5432/security_headers_analyzer

# Analytics & Monitoring (Optional)
# Google Analytics or other analytics service ID
ANALYTICS_ID=

# Plausible Analytics (Alternative to Google Analytics)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourdomain.com

# Sentry Error Tracking (Optional)
SENTRY_DSN=
SENTRY_PROJECT=
SENTRY_ORG=

# Security Configuration
# Secret key for session encryption and CSRF protection
SECRET_KEY=your-secret-key-here-min-32-characters

# CORS Configuration (Optional)
# Allowed origins for API requests
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Performance & Optimization
# Enable/disable various features
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_ANALYTICS=false

# API Rate Limits
ANALYZE_RATE_LIMIT_PER_MINUTE=10
GITHUB_PR_RATE_LIMIT_PER_5_MINUTES=5

# Timeout Settings (in milliseconds)
ANALYSIS_TIMEOUT=10000
GITHUB_API_TIMEOUT=30000

# Feature Flags
ENABLE_GITHUB_INTEGRATION=true
ENABLE_PDF_EXPORT=true
ENABLE_BULK_ANALYSIS=false

# Development & Testing
# Only used in development/testing environments
TEST_GITHUB_TOKEN=
TEST_REPO_URL=https://github.com/test-user/test-repo

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Email Configuration (For notifications)
# SMTP settings for sending notification emails
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@yourdomain.com

# Webhook Configuration (Optional)
# Webhook URL for receiving analysis completion notifications
WEBHOOK_URL=
WEBHOOK_SECRET=